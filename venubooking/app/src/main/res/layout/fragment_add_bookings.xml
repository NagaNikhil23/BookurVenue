<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="panduchinnu.venubooking.add_bookings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>


        <TextView
            android:id="@+id/book1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="Enter your Options"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/book1"
            android:layout_toStartOf="@+id/book1"
            android:text="Area"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/spinner" />

        <EditText
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/booke1"
            android:layout_alignLeft="@+id/booke1"
            android:layout_alignRight="@+id/booke1"
            android:layout_alignStart="@+id/booke1"
            android:layout_below="@+id/book1"
            android:layout_marginTop="35dp"
            android:textColor="#093453"/>

        <TextView
            android:id="@+id/book3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/book5"
            android:layout_alignStart="@+id/book5"
            android:layout_below="@+id/book2"
            android:layout_marginTop="27dp"
            android:text="Capacity"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/booke1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/book3"
            android:ems="10"

            android:inputType="number"
            android:textColor="#093453"
            android:layout_toRightOf="@+id/book3"
            android:layout_toEndOf="@+id/book3" />

        <TextView
            android:id="@+id/book4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/book3"
            android:layout_alignStart="@+id/book3"
            android:layout_below="@+id/booke1"
            android:layout_marginTop="14dp"
            android:text="AC"
            android:textSize="25dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/book4"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/book2"
            android:layout_toRightOf="@+id/book2"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/bookr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/radioButton2"
                android:layout_alignBottom="@+id/radioButton2"
                android:layout_toEndOf="@+id/book3"
                android:layout_toRightOf="@+id/book3"
                android:text="Required"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/bookr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/book4"
                android:layout_alignEnd="@+id/booke1"
                android:layout_alignRight="@+id/booke1"
                android:text="Not Required"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RadioGroup>

        <Button
            android:id="@+id/bookbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/booke1"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/booke1"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:text="Submit"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cost(per 12hrs) :"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/book6"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/bookr3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bookbutton"
                android:layout_marginBottom="16dp"
                android:layout_toLeftOf="@+id/booke3"
                android:layout_toStartOf="@+id/booke3"
                android:text="@string/lessthan50000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/bookr4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radioGroup2"
                android:layout_alignStart="@+id/radioGroup2"
                android:layout_below="@+id/radioGroup3"
                android:layout_weight="1"
                android:text="@string/lessthan100000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/bookr5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/bookr4"
                android:layout_alignBottom="@+id/bookr4"
                android:layout_toEndOf="@+id/bookbutton"
                android:layout_toRightOf="@+id/bookbutton"
                android:text="@string/morethan100000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="0.40" />

        </RadioGroup>

    </RelativeLayout>
</FrameLayout>
