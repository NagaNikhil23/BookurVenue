<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundg"
    tools:context="panduchinnu.venubooking.Ownerhome">
    <EditText
        android:id="@+id/edit3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#093453"
        android:inputType="textPersonName"
        android:hint="Enter your username(Email-id)"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/edit4"
        android:layout_alignLeft="@+id/edit4"
        android:layout_alignStart="@+id/edit4" />

    <EditText
        android:id="@+id/edit4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#093453"
        android:shadowColor="@color/colorAccent"
        android:inputType="textPassword"
        android:hint="Enter your password"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/ownlogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/ownlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogIn"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/ownsig"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User? Sign Up here"
        android:layout_marginBottom="88dp"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" />

    <Button
        android:id="@+id/ownsig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Welcome!"
        android:textSize="45dp"/>

</RelativeLayout>
